<Window x:Class="FlowStock.App.TaraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тара" Height="360" Width="520">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Тара" VerticalAlignment="Center" />
            <TextBox x:Name="TaraNameBox" Width="220" Margin="6,0,12,0" />
            <Button Content="Добавить" Click="AddTara_Click" />
            <Button Content="Закрыть" Click="Close_Click" Margin="8,0,0,0" />
        </StackPanel>
        <DataGrid x:Name="TarasGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
