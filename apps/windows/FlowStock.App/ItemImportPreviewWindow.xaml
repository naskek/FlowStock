<Window x:Class="FlowStock.App.ItemImportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Импорт товаров" Height="640" Width="980">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <CheckBox x:Name="HeaderRowCheck" Content="Первая строка — заголовки" />
            <WrapPanel Margin="0,8,0,0">
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="SKU / штрихкод" />
                    <ComboBox x:Name="SkuColumnCombo" Width="180" />
                </StackPanel>
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="GTIN" />
                    <ComboBox x:Name="GtinColumnCombo" Width="180" />
                </StackPanel>
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Наименование" />
                    <ComboBox x:Name="NameColumnCombo" Width="180" />
                </StackPanel>
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Бренд" />
                    <ComboBox x:Name="BrandColumnCombo" Width="160" />
                </StackPanel>
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Объем" />
                    <ComboBox x:Name="VolumeColumnCombo" Width="160" />
                </StackPanel>
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Срок годности (мес.)" />
                    <ComboBox x:Name="ShelfLifeColumnCombo" Width="180" />
                </StackPanel>
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Тара" />
                    <ComboBox x:Name="TaraColumnCombo" Width="160" />
                </StackPanel>
            </WrapPanel>
            <TextBlock x:Name="ImportStatusText" Margin="0,4,0,0" Foreground="DimGray" />
        </StackPanel>
        <DataGrid x:Name="PreviewGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="False" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="ImportButton" Content="Импортировать" Click="Import_Click" />
            <Button Content="Отмена" Click="Cancel_Click" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
