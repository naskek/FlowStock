<Window x:Class="FlowStock.App.ErrorTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибка подключения"
        Height="360" Width="560"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Ошибка подключения. Полный текст ниже:" />
        <TextBox x:Name="ErrorTextBox"
                 Grid.Row="1"
                 Margin="0,8,0,0"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Скопировать" Width="120" Click="Copy_Click" />
            <Button Content="Закрыть" Width="120" Margin="8,0,0,0" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
