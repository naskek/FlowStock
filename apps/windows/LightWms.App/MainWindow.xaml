<Window x:Class="LightWms.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LightWMS Local" Height="720" Width="1100">
    <DockPanel Margin="12">
        <TabControl x:Name="MainTabs">
            <TabItem Header="Состояние">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox x:Name="StatusSearchBox" Width="240" Margin="0,0,8,0" />
                        <Button Content="Поиск" Click="StatusSearch_Click" Margin="0,0,8,0" />
                        <Button Content="Обновить" Click="StatusRefresh_Click" />
                    </StackPanel>
                    <DataGrid x:Name="StockGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" Binding="{Binding ItemName}" Width="*" />
                            <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="160" />
                            <DataGridTextColumn Header="Локация" Binding="{Binding LocationCode}" Width="140" />
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Qty}" Width="100" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="StockEmptyText"
                               Grid.Row="1"
                               Text="Остатки появятся после закрытия хотя бы одного документа."
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed" />
                </Grid>
            </TabItem>
            <TabItem Header="Документы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <GroupBox Header="Как пользоваться (MVP)" Margin="0,0,0,8">
                        <TextBlock Margin="8,4,8,8" TextWrapping="Wrap">
                            1) Создай товары
                            <LineBreak />
                            2) Создай локации
                            <LineBreak />
                            3) Импортируй JSONL
                            <LineBreak />
                            4) Открой документ
                            <LineBreak />
                            5) Нажми "Закрыть" — появятся остатки
                        </TextBlock>
                    </GroupBox>
                    <DataGrid x:Name="DocsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ref" Binding="{Binding DocRef}" Width="*" />
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="140" />
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120" />
                            <DataGridTextColumn Header="Создан" Binding="{Binding CreatedAt}" Width="160" />
                            <DataGridTextColumn Header="Закрыт" Binding="{Binding ClosedAt}" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,8">
                        <Button Content="Открыть" Click="DocsOpen_Click" />
                        <Button Content="Обновить" Click="DocsRefresh_Click" Margin="8,0,0,0" />
                        <Button Content="Ошибки импорта" Click="ImportErrors_Click" Margin="8,0,0,0" />
                    </StackPanel>
                    <GroupBox Grid.Row="3" Header="Импорт JSONL">
                        <StackPanel Margin="8">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBox x:Name="ImportFilePathBox" Width="540" />
                                <Button Content="..." Click="ImportBrowse_Click" Width="32" Margin="8,0,0,0" />
                                <Button Content="Импортировать" Click="ImportExecute_Click" Margin="8,0,0,0" />
                            </StackPanel>
                            <TextBlock x:Name="ImportStatsText" Text="Статистика: -" />
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Документ">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Документ:" FontWeight="Bold" VerticalAlignment="Center" />
                        <TextBlock x:Name="DocInfoText" Margin="8,0,0,0" VerticalAlignment="Center" TextWrapping="Wrap" />
                        <Button x:Name="DocCloseButton" Content="Закрыть" Click="DocClose_Click" Margin="16,0,0,0" />
                    </StackPanel>
                    <DataGrid x:Name="DocLinesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionChanged="DocLines_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" Binding="{Binding ItemName}" Width="*" />
                            <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="160" />
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Qty}" Width="100" />
                            <DataGridTextColumn Header="Откуда" Binding="{Binding FromLocation}" Width="140" />
                            <DataGridTextColumn Header="Куда" Binding="{Binding ToLocation}" Width="140" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="DocEmptyText"
                               Grid.Row="1"
                               Text="Откройте документ на вкладке 'Документы'"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed" />
                    <GroupBox x:Name="DocEditGroup" Grid.Row="2" Header="Редактирование (DRAFT)" Margin="0,8,0,0">
                        <StackPanel Margin="8">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="Товар" VerticalAlignment="Center" />
                                <ComboBox x:Name="DocItemCombo" Width="220" Margin="6,0,12,0" DisplayMemberPath="Name" />
                                <TextBlock Text="Кол-во" VerticalAlignment="Center" />
                                <TextBox x:Name="DocItemQtyBox" Width="100" Margin="6,0,12,0" />
                                <TextBlock x:Name="DocFromLabel" Text="Откуда" VerticalAlignment="Center" />
                                <ComboBox x:Name="DocFromCombo" Width="140" Margin="6,0,12,0" DisplayMemberPath="Code" />
                                <TextBlock x:Name="DocToLabel" Text="Куда" VerticalAlignment="Center" />
                                <ComboBox x:Name="DocToCombo" Width="140" Margin="6,0,12,0" DisplayMemberPath="Code" />
                                <Button Content="Добавить" Click="DocAddLine_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Кол-во (выделенная строка)" VerticalAlignment="Center" />
                                <TextBox x:Name="DocLineQtyBox" Width="100" Margin="6,0,12,0" />
                                <Button Content="Сохранить" Click="DocUpdateLine_Click" />
                                <Button Content="Удалить" Click="DocDeleteLine_Click" Margin="8,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Товары">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="ItemsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="180" />
                            <DataGridTextColumn Header="GTIN" Binding="{Binding Gtin}" Width="140" />
                            <DataGridTextColumn Header="UOM" Binding="{Binding Uom}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Grid.Row="1" Margin="0,6,0,0" Foreground="Gray"
                               Text="Подсказка: JSONL использует Item Barcode/GTIN." />
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Name" VerticalAlignment="Center" />
                        <TextBox x:Name="ItemNameBox" Width="160" Margin="6,0,12,0" />
                        <TextBlock Text="Barcode" VerticalAlignment="Center" />
                        <TextBox x:Name="ItemBarcodeBox" Width="160" Margin="6,0,12,0" />
                        <TextBlock Text="GTIN" VerticalAlignment="Center" />
                        <TextBox x:Name="ItemGtinBox" Width="120" Margin="6,0,12,0" />
                        <TextBlock Text="UOM" VerticalAlignment="Center" />
                        <TextBox x:Name="ItemUomBox" Width="80" Margin="6,0,12,0" />
                        <Button Content="Добавить" Click="AddItem_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Локации">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="LocationsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="160" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Grid.Row="1" Margin="0,6,0,0" Foreground="Gray"
                               Text="Подсказка: JSONL использует Location Code." />
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Code" VerticalAlignment="Center" />
                        <TextBox x:Name="LocationCodeBox" Width="140" Margin="6,0,12,0" />
                        <TextBlock Text="Name" VerticalAlignment="Center" />
                        <TextBox x:Name="LocationNameBox" Width="200" Margin="6,0,12,0" />
                        <Button Content="Добавить" Click="AddLocation_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
