<Window x:Class="LightWms.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LightWMS Local" Height="720" Width="1100"
        PreviewKeyDown="MainWindow_PreviewKeyDown">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Операции">
                <MenuItem Header="Новый документ..." InputGestureText="Ctrl+N" Click="NewDocMenu_Click" />
                <MenuItem Header="Открыть выбранный" InputGestureText="Ctrl+O" Click="DocsOpen_Click" />
                <MenuItem Header="Закрыть текущий документ" InputGestureText="Ctrl+Enter" Click="DocClose_Click" />
            </MenuItem>
            <MenuItem Header="Импорт">
                <MenuItem Header="Импорт JSONL..." InputGestureText="Ctrl+I" Click="ImportMenu_Click" />
                <MenuItem Header="Ошибки импорта" Click="ImportErrors_Click" />
            </MenuItem>
            <MenuItem Header="Справочники">
                <MenuItem Header="Товары" Click="ViewItems_Click" />
                <MenuItem Header="Места хранения" Click="ViewLocations_Click" />
                <MenuItem Header="Контрагенты" Click="ViewPartners_Click" />
                <Separator />
                <MenuItem Header="Ед. измерения..." Click="UomMenu_Click" />
            </MenuItem>
            <MenuItem Header="Вид">
                <MenuItem Header="Остатки" Click="ViewStatus_Click" />
                <MenuItem Header="Операции" Click="ViewDocs_Click" />
                <MenuItem Header="Заказы" Click="ViewOrders_Click" />
                <MenuItem Header="Товары" Click="ViewItems_Click" />
                <MenuItem Header="Места хранения" Click="ViewLocations_Click" />
                <MenuItem Header="Контрагенты" Click="ViewPartners_Click" />
            </MenuItem>
            <MenuItem Header="Сервис">
                <MenuItem Header="Открыть папку данных" Click="OpenDataFolder_Click" />
                <MenuItem Header="Открыть папку логов" Click="OpenLogsFolder_Click" />
            </MenuItem>
        </Menu>
        <Border Margin="12">
            <TabControl x:Name="MainTabs">
            <TabItem Header="Остатки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox x:Name="StatusSearchBox" Width="240" Margin="0,0,8,0" />
                        <Button Content="Поиск" Click="StatusSearch_Click" Margin="0,0,8,0" />
                        <Button Content="Обновить" Click="StatusRefresh_Click" />
                    </StackPanel>
                    <DataGrid x:Name="StockGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" Binding="{Binding ItemName}" Width="*" />
                            <DataGridTextColumn Header="Штрихкод" Binding="{Binding Barcode}" Width="160" />
                            <DataGridTextColumn Header="Место хранения" Binding="{Binding LocationCode}" Width="140" />
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Qty}" Width="100" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="StockEmptyText"
                               Grid.Row="1"
                               Text="Остатки появятся после закрытия хотя бы одного документа."
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed" />
                </Grid>
            </TabItem>
            <TabItem Header="Операции">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <GroupBox Header="Как пользоваться (MVP)" Margin="0,0,0,8">
                        <TextBlock Margin="8,4,8,8" TextWrapping="Wrap">
                            1) Создай товары
                            <LineBreak />
                            2) Создай места хранения
                            <LineBreak />
                            3) Импортируй JSONL
                            <LineBreak />
                            4) Открой документ
                            <LineBreak />
                            5) Нажми "Закрыть" — появятся остатки
                        </TextBlock>
                    </GroupBox>
                    <DataGrid x:Name="DocsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              MouseDoubleClick="DocsGrid_MouseDoubleClick"
                              KeyDown="DocsGrid_KeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер" Binding="{Binding DocRef}" Width="*" />
                            <DataGridTextColumn Header="Тип" Binding="{Binding TypeDisplay}" Width="160" />
                            <DataGridTextColumn Header="Статус" Binding="{Binding StatusDisplay}" Width="120" />
                        <DataGridTextColumn Header="Контрагент" Binding="{Binding PartnerDisplay}" Width="220" />
                            <DataGridTextColumn Header="Заказ" Binding="{Binding OrderRef}" Width="160" />
                            <DataGridTextColumn Header="Создан" Binding="{Binding CreatedAt}" Width="160" />
                            <DataGridTextColumn Header="Закрыт" Binding="{Binding ClosedAt}" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,8">
                        <Button Content="Обновить" Click="DocsRefresh_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Заказы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="OrdersGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True"
                              MouseDoubleClick="OrdersGrid_MouseDoubleClick"
                              KeyDown="OrdersGrid_KeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер" Binding="{Binding OrderRef}" Width="*" />
                            <DataGridTextColumn Header="Контрагент" Binding="{Binding PartnerDisplay}" Width="220" />
                            <DataGridTextColumn Header="Плановая отгрузка" Binding="{Binding DueDate, StringFormat=d}" Width="160" />
                            <DataGridTextColumn Header="Статус" Binding="{Binding StatusDisplay}" Width="140" />
                            <DataGridTextColumn Header="Факт отгрузки" Binding="{Binding ShippedAt, StringFormat=g}" Width="160" />
                            <DataGridTextColumn Header="Создан" Binding="{Binding CreatedAt, StringFormat=g}" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8">
                        <Button Content="Новый" Click="OrdersNew_Click" />
                        <Button Content="Обновить" Click="OrdersRefresh_Click" Margin="8,0,0,0" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Товары">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <GroupBox Header="Форма">
                            <StackPanel Margin="8">
                                <TextBlock Text="Наименование" />
                                <TextBox x:Name="ItemNameBox" Margin="0,2,0,8" TabIndex="1" />
                                <TextBlock Text="Штрихкод" />
                                <TextBox x:Name="ItemBarcodeBox" Margin="0,2,0,8" TabIndex="2" />
                                <TextBlock Text="GTIN" />
                                <TextBox x:Name="ItemGtinBox" Margin="0,2,0,8" TabIndex="3" />
                                <TextBlock Text="Ед. измерения" />
                                <ComboBox x:Name="ItemUomCombo" Margin="0,2,0,0" DisplayMemberPath="Name" TabIndex="4" />
                            </StackPanel>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Добавить" Click="AddItem_Click" TabIndex="5" />
                            <Button x:Name="ItemSaveButton" Content="Сохранить" Click="UpdateItem_Click" Margin="8,0,0,0" TabIndex="6" />
                            <Button x:Name="ItemDeleteButton" Content="Удалить" Click="DeleteItem_Click" Margin="8,0,0,0" TabIndex="7" />
                        </StackPanel>
                        <TextBlock Margin="0,8,0,0" Foreground="Gray"
                                   Text="Подсказка: JSONL использует Штрихкод/GTIN." />
                    </StackPanel>
                    <DataGrid x:Name="ItemsGrid" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionChanged="ItemsGrid_SelectionChanged" TabIndex="20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Штрихкод" Binding="{Binding Barcode}" Width="180" />
                            <DataGridTextColumn Header="GTIN" Binding="{Binding Gtin}" Width="140" />
                            <DataGridTextColumn Header="Ед. измерения" Binding="{Binding Uom}" Width="140" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Места хранения">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <GroupBox Header="Форма">
                            <StackPanel Margin="8">
                                <TextBlock Text="Код" />
                                <TextBox x:Name="LocationCodeBox" Margin="0,2,0,8" TabIndex="1" />
                                <TextBlock Text="Наименование" />
                                <TextBox x:Name="LocationNameBox" Margin="0,2,0,0" TabIndex="2" />
                            </StackPanel>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Добавить" Click="AddLocation_Click" TabIndex="3" />
                            <Button x:Name="LocationSaveButton" Content="Сохранить" Click="UpdateLocation_Click" Margin="8,0,0,0" TabIndex="4" />
                            <Button x:Name="LocationDeleteButton" Content="Удалить" Click="DeleteLocation_Click" Margin="8,0,0,0" TabIndex="5" />
                        </StackPanel>
                        <TextBlock Margin="0,8,0,0" Foreground="Gray"
                                   Text="Подсказка: JSONL использует код места хранения." />
                    </StackPanel>
                    <DataGrid x:Name="LocationsGrid" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionChanged="LocationsGrid_SelectionChanged" TabIndex="20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="160" />
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Контрагенты">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <GroupBox Header="Форма">
                            <StackPanel Margin="8">
                                <TextBlock Text="Наименование" />
                                <TextBox x:Name="PartnerNameBox" Margin="0,2,0,8" TabIndex="1" />
                                <TextBlock Text="ИНН" />
                                <TextBox x:Name="PartnerCodeBox" Margin="0,2,0,0" TabIndex="2" />
                            </StackPanel>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Добавить" Click="AddPartner_Click" TabIndex="3" />
                            <Button x:Name="PartnerSaveButton" Content="Сохранить" Click="UpdatePartner_Click" Margin="8,0,0,0" TabIndex="4" />
                            <Button x:Name="PartnerDeleteButton" Content="Удалить" Click="DeletePartner_Click" Margin="8,0,0,0" TabIndex="5" />
                        </StackPanel>
                    </StackPanel>
                    <DataGrid x:Name="PartnersGrid" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionChanged="PartnersGrid_SelectionChanged" TabIndex="20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ИНН" Binding="{Binding Code}" Width="160" />
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Создан" Binding="{Binding CreatedAt}" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            </TabControl>
        </Border>
    </DockPanel>
</Window>
