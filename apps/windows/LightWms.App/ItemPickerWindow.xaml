<Window x:Class="LightWms.App.ItemPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор товара"
        Height="520" Width="860"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchBox" Grid.Row="0" Margin="0,0,0,8"
                 TextChanged="SearchBox_TextChanged" />
        <Grid Grid.Row="1">
            <DataGrid x:Name="ItemsGrid" AutoGenerateColumns="False" IsReadOnly="True"
                      MouseDoubleClick="ItemsGrid_MouseDoubleClick"
                      KeyDown="ItemsGrid_KeyDown">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Штрихкод" Binding="{Binding Barcode}" Width="180" />
                    <DataGridTextColumn Header="GTIN" Binding="{Binding Gtin}" Width="140" />
                    <DataGridTextColumn Header="Базовая единица" Binding="{Binding BaseUom}" Width="140" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock x:Name="EmptyText"
                       Text="Ничего не найдено."
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"
                       IsHitTestVisible="False" />
        </Grid>
    </Grid>
</Window>
