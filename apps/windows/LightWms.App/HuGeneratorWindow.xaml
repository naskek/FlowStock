<Window x:Class="LightWms.App.HuGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор HU"
        Height="520" Width="520"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Количество" VerticalAlignment="Center" />
            <TextBox x:Name="HuCountBox" Width="80" Margin="8,0,0,0" />
            <Button Content="Сгенерировать" Click="Generate_Click" Margin="8,0,0,0" />
        </StackPanel>
        <ListBox x:Name="HuList" Grid.Row="1" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Скопировать все" Click="CopyAll_Click" Width="140" />
        </StackPanel>
    </Grid>
</Window>
