<Window x:Class="LightWms.App.ImportErrorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибки импорта" Height="520" Width="920">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="ErrorsGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="ErrorsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Событие" Binding="{Binding EventId}" Width="200" />
                <DataGridTextColumn Header="Штрихкод" Binding="{Binding Barcode}" Width="160" />
                <DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="140" />
                <DataGridTextColumn Header="Создано" Binding="{Binding CreatedAt, StringFormat={}{0:dd'/'MM'/'yyyy HH':'mm}}" Width="160" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <TextBlock Text="Штрихкод" FontWeight="Bold" />
            <TextBlock x:Name="SelectedBarcodeText" Margin="0,0,0,8" />

            <TextBlock Text="Привязать к товару" FontWeight="Bold" />
            <ComboBox x:Name="ItemsComboBox" Width="240" DisplayMemberPath="Name" />
            <Button Content="Привязать" Click="BindBarcode_Click" Margin="0,6,0,12" Width="120" />

            <TextBlock Text="Новый товар" FontWeight="Bold" />
            <TextBlock Text="Наименование" />
            <TextBox x:Name="NewItemNameBox" Width="240" />
            <TextBlock Text="GTIN" Margin="0,6,0,0" />
            <TextBox x:Name="NewItemGtinBox" Width="240" />
            <TextBlock Text="Базовая единица" Margin="0,6,0,0" />
            <ComboBox x:Name="NewItemUomCombo" Width="160" DisplayMemberPath="Name" />
            <Button Content="Создать" Click="CreateItem_Click" Margin="0,6,0,12" Width="120" />

            <Button Content="Переприменить" Click="Reapply_Click" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Обновить" Click="Refresh_Click" Margin="0,0,8,0" />
            <Button Content="Закрыть" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>
