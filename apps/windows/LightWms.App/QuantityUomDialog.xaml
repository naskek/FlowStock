<Window x:Class="LightWms.App.QuantityUomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Количество"
        Height="240" Width="360"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Количество" />
            <TextBox x:Name="QtyBox" Margin="0,6,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,8,0,0">
            <TextBlock Text="Единица" />
            <ComboBox x:Name="UomCombo" Margin="0,6,0,0" DisplayMemberPath="Name" />
        </StackPanel>
        <TextBlock x:Name="TotalText" Grid.Row="2" Margin="0,10,0,0" Foreground="Gray" />
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="80" IsDefault="True" Click="Ok_Click" />
            <Button Content="Отмена" Width="80" IsCancel="True" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
