<Window x:Class="LightWms.App.PackagingManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Упаковки"
        Height="700" Width="980"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Фильтр по товару" VerticalAlignment="Center" />
            <ComboBox x:Name="FilterItemCombo" Width="320" Margin="8,0,0,0"
                      DisplayMemberPath="DisplayName" SelectionChanged="FilterItemCombo_SelectionChanged" />
            <Button Content="Сброс" Margin="8,0,0,0" Click="FilterReset_Click" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <GroupBox Header="Упаковка" Grid.Column="0" Margin="0,0,12,0">
                <StackPanel Margin="8">
                    <TextBlock Text="Товар" />
                    <ComboBox x:Name="ItemCombo" Margin="0,2,0,8" DisplayMemberPath="DisplayName"
                              SelectionChanged="ItemCombo_SelectionChanged" />
                    <TextBlock Text="Код" />
                    <TextBox x:Name="PackagingCodeBox" Margin="0,2,0,8" />
                    <TextBlock Text="Наименование" />
                    <TextBox x:Name="PackagingNameBox" Margin="0,2,0,8" />
                    <TextBlock x:Name="PackagingFactorLabel" Text="Количество в упаковке (база)" />
                    <TextBox x:Name="PackagingFactorBox" Margin="0,2,0,8" />
                    <TextBlock Text="Порядок сортировки" />
                    <TextBox x:Name="PackagingSortBox" Margin="0,2,0,8" />
                    <CheckBox x:Name="PackagingActiveCheck" Content="Активна" Margin="0,0,0,12" />
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Добавить" Width="100" Click="AddPackaging_Click" />
                        <Button x:Name="SavePackagingButton" Content="Сохранить" Width="100" Margin="8,0,0,0" Click="SavePackaging_Click" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="DeletePackagingButton" Content="Удалить" Width="100" Click="DeletePackaging_Click" />
                        <Button x:Name="SetDefaultButton" Content="Сделать по умолчанию" Width="160" Margin="8,0,0,0" Click="SetDefault_Click" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <DataGrid x:Name="PackagingGrid" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionChanged="PackagingGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Товар" Binding="{Binding ItemDisplay}" Width="220" />
                    <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="120" />
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="В упаковке (база)" Binding="{Binding FactorToBase}" Width="160" />
                    <DataGridCheckBoxColumn Header="Активна" Binding="{Binding IsActive}" Width="90" />
                    <DataGridTextColumn Header="Сортировка" Binding="{Binding SortOrder}" Width="120" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
