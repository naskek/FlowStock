<Window x:Class="LightWms.App.TsdDevicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Устройства ТСД"
        Height="420" Width="560"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="DevicesGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Width="160" />
                <DataGridTextColumn Header="Название" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
            <Button Content="Добавить" Width="100" Click="Add_Click" />
            <Button Content="Удалить" Width="100" Margin="8,0,0,0" Click="Delete_Click" />
            <Button Content="Сохранить" Width="100" Margin="8,0,0,0" Click="Save_Click" />
            <Button Content="Закрыть" Width="100" Margin="8,0,0,0" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>
