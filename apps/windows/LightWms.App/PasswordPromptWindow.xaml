<Window x:Class="LightWms.App.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пароль администратора"
        Height="190" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Введите пароль администратора" />
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="0,6,0,0" />
        <TextBlock x:Name="ErrorText"
                   Grid.Row="2"
                   Margin="0,6,0,0"
                   Foreground="Crimson"
                   Text="Неверный пароль"
                   Visibility="Collapsed" />
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Click="Ok_Click" IsDefault="True" />
            <Button Content="Отмена" Width="80" Margin="8,0,0,0" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
