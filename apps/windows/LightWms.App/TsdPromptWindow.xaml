<Window x:Class="LightWms.App.TsdPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Синхронизация с ТСД"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Обнаружено подключение ТСД. Открыть синхронизацию?"
                   TextWrapping="Wrap"
                   Width="320" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Открыть" Width="100" Click="Open_Click" IsDefault="True" />
            <Button Content="Не сейчас" Width="100" Margin="8,0,0,0" Click="Later_Click" />
            <Button Content="Не спрашивать" Width="120" Margin="8,0,0,0" Click="Disable_Click" />
        </StackPanel>
    </Grid>
</Window>
